<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="devlab.com.digitsrecorder.RecordActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strIntro"
        android:id="@+id/textViewIntro"
        android:textSize="24dp"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewDigit"
        android:capitalize="characters"
        android:textSize="48dp"
        android:textStyle="bold"
        android:layout_below="@+id/textViewIntro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp"
        android:textColor="@color/colorPrimary" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle"
        android:text="Next Digit"
        android:id="@+id/btnNextNumber"
        android:layout_alignBottom="@+id/textViewDigit"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
         />

    <ProgressBar android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saving"
        android:layout_alignBottom="@+id/btnRecord"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="67dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="Make Recording"
        android:id="@+id/btnRecord"
        android:background="@drawable/circle"
        android:drawableTop="@android:drawable/ic_btn_speak_now"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Sampling Frequency: 44100 Hz"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="31dp"
        android:textStyle="italic" />


</RelativeLayout>
